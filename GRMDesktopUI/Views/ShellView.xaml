<Window x:Class="GRMDesktopUI.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GRMDesktopUI.Views"
        mc:Ignorable="d"
        Title="ShellView" Height="1000" Width="800" FontSize="18">
    <DockPanel>
        <Menu DockPanel.Dock="Top" FontSize="18">
            <MenuItem Header="_File">
                <MenuItem x:Name="Exit" Header="_Exit"></MenuItem>
            </MenuItem>
            <MenuItem Header="_Account">
                <MenuItem x:Name="LoginScreen" Header="_Login">
                </MenuItem>
            </MenuItem>
        </Menu>
        <Grid Margin="10 5 10 20">
            <ContentControl x:Name="ActiveItem" Margin="10">

            </ContentControl>
        </Grid>
       
    </DockPanel>
</Window>
